= form_for(@spirit) do |f|
  - if @spirit.errors.any?
    .alert.alert-block
      %button.close{type: 'button', 'data-dismiss' => 'alert'} &times;
      %h4= "#{pluralize(@spirit.errors.count, "error")} prohibited this spirit from being saved:"
      %ul
        - @spirit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :is_brand, class: 'checkbox' do
      = f.check_box :is_brand
      Brand?
  .actions
    = f.submit class: 'btn'
